.row.mt-3
  .col-5
    %h1 My Bags
  .col
    .row.mx-0
      = link_to 'Create Bag', new_bag_path, :class => "btn btn-lg btn-success ml-auto"
.row
  - @bags.each do |bag|
    .col-3.my-3
      .card
        .card-header
          =bag.name
        .card-image-top.text-center
          = render "shared/display_bag_picture_as_link", bag: bag, path: bag_path(bag)
  -if @bags.blank?
    %h5.m-3 You don't have any bags yet
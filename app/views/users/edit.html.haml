=form_for @user do |form|
  .row.my-5
    .col-5
      %h3 Account info:
      .row.col.form-group
        = form.text_field :name, :class => "form-control", :placeholder => "Name"
      .row.col.form-group
        = form.text_field :PDGA_num, :class => "form-control", :placeholder => "PDGA number"
      .row.col.form-group.mt-5.mb-3
        %h4 Bio:
        =form.text_area :bio, rows: "5", :class => "form-control", :placeholder => "What's interesting about you?"
      .row.col.ml-5
        = link_to "Change email/password", edit_user_registration_path, :class => "btn btn-secondary"
    .col-3.text-center
      .card
        .card-header.text-center
          Your Followers
        .card-body
          %ul.list-group
            -if @followers.blank?
              None yet, share your profile
            -else
              -@followers.each do |user|
                %li.list-group-item
                  =link_to "#{user.name}", user
    .col-3.offset-1.text-center
      .card
        .card-header.text-center
          Following
        .card-body
          %ul.list-group
            -if @following.blank?
              %p You aren't following anyone yet
            -else
              -@following.each do |user|
                %li.list-group-item
                  =link_to "#{user.name}", user
  = form.submit :Save, :class => "btn btn-primary my-3"
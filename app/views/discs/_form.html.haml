= form_with(model: disc, local: true) do |form|
  .row.my-2.ml-1
    .form-group.ml-1
      = form.file_field :picture
  .row
    .col-9
      .row.my-2
        .col-4
          .form-group
            = form.text_field :plastic_type, :class => "form-control", :placeholder => "plastic type"
        .col-4
          .form-group
            = form.text_field :model, :class => "form-control", :placeholder => "model"
        .col-4
          .form-group
            = form.text_field :brand, :class => "form-control", :placeholder => "brand"
      .row.my-2
        .col-2
          .form-group
            = form.text_field :speed, :class => "form-control", :placeholder => "speed"
        .col-2
          .form-group
            = form.text_field :glide, :class => "form-control", :placeholder => "glide"
        .col-2
          .form-group
            = form.text_field :turn, :class => "form-control", :placeholder => "turn"
        .col-2
          .form-group
            = form.text_field :fade, :class => "form-control", :placeholder => "fade"
        .col-2
          .form-group
            = form.text_field :weight, :class => "form-control", :placeholder => "weight"
        .col-2
          .form-group
            = form.text_field :color, :class => "form-control", :placeholder => "color"
      .row.my-2
        .col-4
          .form-group
            = form.text_field :condition, :class => "form-control", :placeholder => "condition (scale: 1-10)"
        .col-3
          .form-group
            = form.text_field :nickname, :class => "form-control", :placeholder => "nickname"
      .row.my-2
        .col-12
          %p Description: 
          .form-group
            = form.text_area :description, :class => "form-control", :placeholder => "What's special about this disc?"
    .col-3
      .row.ml-4
        -if @disc.picture.attached?
          =image_tag(@disc.picture, size: "200x200")
      .row.my-5
        = link_to 'Cancel', discs_path, :class => "btn btn btn-danger m-auto"
        = form.submit :Finish, :class => "btn btn btn-success m-auto"

      
.row.mt-3
  .col-5
    %h1 My Discs
  .col-2.ml-auto
    = link_to 'New Disc', new_disc_path, :class => "btn btn-lg btn-success"
.col.pl-0
  %h3 Search by: 
  =search_form_for @q do |f|
    .form-group.row
      .col-2
        =f.search_field :model_cont, :class => "form-control", :placeholder => "model"
      .col-2
        =f.search_field :plastic_type_cont, :class => "form-control", :placeholder => "plastic type"
      .col-2
        =f.search_field :brand_cont, :class => "form-control", :placeholder => "brand"
      .col-2
        =f.search_field :speed_eq, :class => "form-control", :placeholder => "speed"
      .col-2
        =f.search_field :color_cont, :class => "form-control", :placeholder => "color"
      .col-1
        =f.submit :class => "btn btn-primary btn-sm"
.row
  - @discs.each do |disc|
    .col-3.my-3
      .card
        .card-image-top.text-center
          -if disc.picture.attached?
            = link_to image_tag(disc.picture, size: "250x250"), disc
          -else
            = link_to image_tag('blank_disc.jpg', size: "250x250"), disc
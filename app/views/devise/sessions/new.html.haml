.row
  .col-md-4
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "form-control"
      .actions
        .row.no-gutters.mt-3
          = f.submit "Log in", class: "btn btn-success btn-sm mr-4"
          = link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary btn-sm"
